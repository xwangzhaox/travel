        <h1 class="block_title">Featured Tours</h1>
        <% Category.find_by_name("Featured Tours").sub_categories.each do |category| %>
          <% next if category.articles.first.tour_pictures.first.nil? %>
          <div class="photo">
            <%= image_tag category.articles.first.tour_pictures.first.image(:normal), :width=>"194", :height=>"111", class: "radius-boder" %>
            <%= link_to category.name, {:controller=>"index", :action=>"#{category.format_name}_category"} %>
          </div>
        <% end %>