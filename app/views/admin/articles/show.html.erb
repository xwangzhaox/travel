<h1>Show Article</h1>
<br />
      <p id="notice"><%= notice %></p>
      <div class="control-group display-flex">
        <label class="control-label" for="events">title:</label>
        <div class="controls">
          <%= @admin_article.title %>      
        </div>
      </div>
      <div class="control-group display-flex">
        <label class="control-label" for="events">Content:</label>
        <div class="controls">
          <%= @admin_article.html_content %>      
        </div>
      </div>
      <% @admin_article.tour_pictures.each do |x|%>
        <%=  image_tag x.image(:normal)%>
      <% end %>
      <div class="row t_margin_15">
        <div class="pull-right r_margin_30">
          
            <div class="pull-left">
              <%= link_to 'Back', admin_articles_path %> | 
            </div>
            <div class="pull-right">
              <%= link_to 'Edit', edit_admin_article_path(@admin_article) %>
            </div>
        </div>
      </div>
